#############################################
# YouTube Live Streaming Scheduler - .env.example
# Copy to .env and customize values as needed.
#############################################

# Backend runtime environment: 'development' or 'production'
NODE_ENV=development

# Backend HTTP port
PORT=3000

# MongoDB connection URI
# If using this repo's docker-compose, the Mongo service is 'mongo'.
# Otherwise set to your actual MongoDB host.
MONGODB_URI=mongodb://mongo:27017/youtube-scheduler

# Absolute path where uploaded videos are stored
# In dockerized backend, '/app/videos' is mounted to ./videos
VIDEOS_PATH=/app/videos

# Maximum upload size (in bytes). 5GB = 5368709120
MAX_UPLOAD_SIZE=5368709120

# Allowed CORS origins (comma-separated)
# Include your dev preview origin (with port) and production domain
ALLOWED_ORIGINS=http://localhost:5174,http://127.0.0.1:5174,http://yourdomain.com

# Backend may read CORS_ORIGINS instead; keep both in sync
CORS_ORIGINS=http://localhost:5174,http://127.0.0.1:5174,http://yourdomain.com

# Traefik / ACME
# Public domain for HTTPS routing
DOMAIN=yourdomain.com

# Email for Let's Encrypt certificate issuance/renewal
ACME_EMAIL=you@example.com